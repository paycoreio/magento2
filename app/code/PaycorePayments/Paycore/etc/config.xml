<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <paycorepayments_paycore>
                <active>0</active>
                <test_mode>0</test_mode>
                <model>PaycorePayments\Paycore\Model\Payment</model>
                <payment_action>authorize_capture</payment_action>
                <title>PayCore.io</title>
                <secret_key backend_model="Magento\Config\Model\Config\Backend\Encrypted"/>
                <test_secret_key backend_model="Magento\Config\Model\Config\Backend\Encrypted"/>
                <allowspecific>0</allowspecific>
                <description><![CDATA[Purchase of goods in the store. Order #{order_id}.]]></description>
            </paycorepayments_paycore>
        </payment>
    </default>
</config>